<h1 style="color:#0101DF";>Personas</h1>
<% if user_signed_in?%>
<table class="table">
  <thead>
    <tr>
      <th>Num documento</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.num_documento %></td>
        <td><%= persona.nombre %></td>
        <td><%= persona.apellido %></td>
        <td><%= persona.direccion %></td>
        <td><%= persona.telefono %></td>
        <td><%= persona.email %></td>
        <td><%= link_to 'Show', persona , class: 'btn btn-primary'%></td>
        <td><%= link_to 'Edit', edit_persona_path(persona), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Persona', new_persona_path, class: 'btn btn-primary' %>
<% else %>
<table class="table">
  <thead>
    <tr>
      <th>Num documento</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.num_documento %></td>
        <td><%= persona.nombre %></td>
        <td><%= persona.apellido %></td>
        <td><%= persona.direccion %></td>
        <td><%= persona.telefono %></td>
        <td><%= persona.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
