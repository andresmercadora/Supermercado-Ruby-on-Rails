  <div class="form-group">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, id: :persona_nombre, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :apellido %>
    <%= form.text_field :apellido, id: :persona_apellido, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :direccion %>
    <%= form.text_field :direccion, id: :persona_direccion, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :telefono %>
    <%= form.text_field :telefono, id: :persona_telefono, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
